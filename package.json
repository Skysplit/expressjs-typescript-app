{
  "name": "expressjs-typescript-app",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run serve",
    "test": "npm run lint && npm run test-ci",
    "serve": "node src/index.js",
    "lint": "tslint --format stylish --project .",
    "test-ci": "cross-env NODE_ENV=testing jest --forceExit --coverage --verbose --runInBand",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Node\" -c \"green.bold\" \"npm run watch-node\"",
    "watch-node": "nodemon -e ts,js --ignore '*.spec.ts' src/index.js",
    "watch-test": "cross-env NODE_ENV=testing jest --watch",
    "typeorm": "typeorm",
    "cli": "ts-node -r dotenv/config -r tsconfig-paths/register"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "~8.9.4"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "lodash": "^4.17.5",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.10",
    "sqlite3": "^3.1.13",
    "tsconfig-paths": "^3.1.1",
    "typeorm": "0.1.13"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "0.0.30",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.4",
    "@types/lodash": "^4.14.104",
    "@types/node": "^8.9.4",
    "@types/passport": "^0.4.3",
    "@types/passport-local": "^1.0.32",
    "@types/supertest": "^2.0.4",
    "@types/typescript": "^2.0.0",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.3",
    "jest": "^22.4.2",
    "nodemon": "^1.17.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "typescript": "^2.7.2"
  }
}
