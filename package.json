{
  "name": "expressjs-typescript-app",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "cli": "NODE_ENV=production node -r ./dist/bootstrap",
    "cli:dev": "ts-node -r ./src/bootstrap",
    "serve": "NODE_ENV=production node dist/index.js",
    "start": "npm run serve",
    "start:dev": "nodemon ./src/index.ts",
    "start:debug": "nodemon --inspect ./src/index.ts",
    "build:clean": "rimraf dist",
    "build": "npm run build:clean && tsc -p ./tsconfig.build.json",
    "lint": "tslint --format stylish --project ./tsconfig.json --config ./tslint.json",
    "test": "npm run lint && npm run test:ci",
    "test:ci": "cross-env NODE_ENV=testing jest --forceExit --coverage --verbose --runInBand",
    "test:watch": "cross-env NODE_ENV=testing jest --watch --runInBand",
    "typeorm": "npm run cli -- node_modules/.bin/typeorm",
    "typeorm:dev": "npm run cli:dev -- node_modules/.bin/typeorm"
  },
  "author": "Tomasz Romik",
  "license": "MIT",
  "engines": {
    "node": "~8.9.4"
  },
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "dotenv": "^5.0.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "mysql": "^2.15.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.12",
    "tsconfig-paths": "^3.1.1",
    "typeorm": "^0.2.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "0.0.30",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/faker": "^4.1.2",
    "@types/jest": "^22.2.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/lodash": "^4.14.104",
    "@types/node": "^8.9.4",
    "@types/passport": "^0.4.3",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.32",
    "@types/supertest": "^2.0.4",
    "@types/typescript": "^2.0.0",
    "cross-env": "^5.1.3",
    "jest": "^22.4.2",
    "nodemon": "^1.17.1",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.0",
    "ts-node": "^5.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "typescript": "^2.7.2"
  }
}
