{
  "name": "expressjs-typescript-app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run build-ts",
    "test": "jest --forceExit --coverage --verbose --runInBand",
    "lint": "tslint --format stylish --project .",
    "serve": "node dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "jest --watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"blue.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" "
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "debug": "^3.1.0",
    "dotenv": "^5.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "lodash": "^4.17.5",
    "module-alias": "^2.0.6",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "0.0.30",
    "@types/dotenv": "^4.0.2",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/lodash": "^4.14.104",
    "@types/passport": "^0.4.2",
    "@types/passport-local": "^1.0.32",
    "@types/supertest": "^2.0.4",
    "@types/typescript": "^2.0.0",
    "concurrently": "^3.5.1",
    "jest": "^22.3.0",
    "nodemon": "^1.15.1",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.6.0",
    "typescript": "^2.7.2"
  },
  "_moduleAliases": {
    "@app": "./dist"
  }
}
